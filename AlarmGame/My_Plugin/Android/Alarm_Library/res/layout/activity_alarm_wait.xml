<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.unity.alarm.AlarmWait">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="121dp"
        android:layout_height="28dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="17dp"
        android:text="@string/ALARM_TIME"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintLeft_toLeftOf="@+id/alarmTime"
        app:layout_constraintRight_toRightOf="@+id/alarmTime"
        app:layout_constraintTop_toBottomOf="@+id/alarmTime" />

    <TextClock
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:textSize="55sp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="138dp"
        android:layout_height="31dp"
        android:text="@string/CURR_TIME"
        android:textSize="18sp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/textClock"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textClock"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textClock"
        app:layout_constraintHorizontal_bias="0.562" />

    <TextView
        android:id="@+id/alarmTime"
        android:layout_width="240dp"
        android:layout_height="62dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="89dp"
        android:textColor="@android:color/black"
        android:textSize="55sp"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintLeft_toLeftOf="@+id/textClock"
        app:layout_constraintRight_toRightOf="@+id/textClock"
        app:layout_constraintTop_toBottomOf="@+id/textClock" />

    <Button
        android:id="@+id/button3"
        android:layout_width="148dp"
        android:layout_height="85dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:onClick="resetAlarm"
        android:text="@string/RESET_ALARM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</android.support.constraint.ConstraintLayout>
